#!/usr/bin/env python

import sys
import subprocess

args = sys.argv[1:]

revision = None

for i, a in enumerate(args):
    if a == '--':
        break
    if not a.startswith('-'):
        revision = i

if not revision:
    print 'Requires a commit'
    sys.exit(1)

args.insert(revision, args[revision] + '~')

print 'Running: ', ' '.join(['git', 'difftool' ] + args)
p = subprocess.Popen(['git', 'difftool' ] + args)
p.wait()
