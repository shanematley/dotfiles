#!/usr/bin/env bash
# like ps aux | grep foo but much easier (for me) to readâ€”just the PID (highlighted in purple) and the command.

set -e
set -u

process_list="$(ps -eo 'pid command')"
if [[ $# != 0 ]]; then
  process_list="$(echo "$process_list" | grep -Fiw "$@")"
fi

echo "$process_list" |
  grep -Fv "${BASH_SOURCE[0]}" |
  grep -Fv grep |
  GREP_COLORS='mt=00;35' grep -E --colour=auto '^\s*[[:digit:]]+'

